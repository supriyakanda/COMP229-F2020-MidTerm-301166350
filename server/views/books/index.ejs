<% include ../partials/header.ejs %>

<!-- MAIN CONTENT -->
<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-10">
      <h3>Favourite Books List </h3>
      <a href="/books/add" class="btn btn-primary"><i class="fa fa-plus"></i> Add a book</a>
      <br>
      <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
          <thead>
            <tr>
              <th>Title</th>
              <th class="text-center">Price</th>
              <th class="text-center">Author</th>
              <th class="text-center">Genre</th>
              <th class="text-center">Description</th>
              <th class="text-center"></th>
              <th class="text-center"></th>
            </tr>
          </thead>
          <tbody>
            <!-- Template Row -->
            <% for (let index = 0; index < books.length; index++) { %>
            <tr>
              <td><%= books[index].Title %></td>
              <td class="text-center">$<%= books[index].Price %></td>
              <td class="text-center"><%= books[index].Author %></td>
              <td class="text-center"><%= books[index].Genre %></td>
              <td class="text-center"><%= books[index].Description %></td>
              <td class="text-center">
                <a class="btn btn-success" href='/books/<%= books[index].id %>'>Edit</a>
                &nbsp;
              </td>
              <td class="text-center">
                <a class="btn btn-danger" href='/books/delete/<%= books[index].id %>'>Delete</a>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      <div class="col-md-offset-1 col-md-10 text-center">
        <ul class="pagination pagination-lg pager" id="myPager"></ul>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>